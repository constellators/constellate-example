{
  "scripts": {
    "init": "npm install && npm run link",
    "build": "constellate build",
    "clean": "constellate clean",
    "link": "lerna bootstrap",
    "develop": "constellate develop",
    "package": "constellate package",
    "deploy": "constellate deploy",
    "update": "lerna exec --concurrency 1 -- npm-check -u"
  },
  "jest": {
    "collectCoverageFrom": [
      "projects/**/*.js"
    ],
    "snapshotSerializers": [
      "<rootDir>/node_modules/enzyme-to-json/serializer"
    ]
  },
  "lint-staged": {
    "*.js": [
      "prettier-eslint --write",
      "git add"
    ]
  },
  "devDependencies": {
    "constellate": "0.0.16"
  }
}
